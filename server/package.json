{
  "name": "escape-game-server",
  "version": "1.0.0",
  "description": "Serveur Escape Game avec Express et MongoDB Atlas",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently -n \"BACKEND,FRONTEND\" -c \"bgBlue,bgGreen\" \"npm run server\" \"npm run client\"",
    "seed": "node seed.js",
    "build": "cd client && npm install && npm run build",
    "backend": "cd server && npm start",
    "frontend": "cd client && npm start",
    "install:all": "concurrently \"cd server && npm install\" \"cd client && npm install\""
  },
  "pkg": {
    "assets": [
      "../client/build/**/*",
      "routes/**/*",
      "models/**/*",
      "middleware/**/*",
      ".env",
      "package.json"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "../dist"
  },
  "keywords": [
    "escape-game",
    "express",
    "mongodb"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "pkg": "^5.8.1",
    "concurrently": "^8.2.2"
  }
}
